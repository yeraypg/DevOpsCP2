apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-web
  namespace: {{ ns }}
spec:
  replicas: 1
  selector:
    matchLabels: { app: web }
  template:
    metadata: { labels: { app: web } }
    spec:
      containers:
      - name: web
        image: {{ acr }}/casopractico2:web-amd64
        imagePullPolicy: Always     # ‚Üê fuerza nueva capa
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-web
  namespace: {{ ns }}
spec:
  selector: { app: web }
  ports:
    - port: 80
      targetPort: 80
  type: ClusterIP
